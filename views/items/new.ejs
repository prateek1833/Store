<% layout('../layout/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8">
                <br><br>
                <h2>Add a new Item</h2>
                <br>
                <form method="POST" 
                action="/items/new" 
                class="needs-validation" 
                novalidate 
                enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" placeholder="Enter catchy title" class="form-control" required>
                    </div>
                    <br>
                    <div>
                        <label for="description" class="form-label">description</label>
                        <input type="text" name="description" placeholder="Enter Description" class="form-control" >
                    </div>
                    <br>
                    <div>
                        <label for="key" class="form-label">Keywords</label>
                        <input type="text" name="key" placeholder="Enter Some words that best represent the item" class="form-control" >
                    </div>
                    <br>
                    <div>
                        <label for="category" class="form-label">category</label>
                        <input type="text" name="category" placeholder="Enter category" class="form-control" >
                    </div>
                    <br>
                    <div>
                        <label for="unit" class="form-label">Measuring Unit</label>
                        <input type="text" name="unit" placeholder="Enter measuring unit of item" class="form-control" >
                    </div>
                    <br>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Item Image</label>
                        <input type="file" name="image"  class="form-control">
                    </div>
                    <br>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="price" placeholder="1200" class="form-control" required>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn">Add</button>
                </form>
                <br>
            </div>
        </div>
    </body>